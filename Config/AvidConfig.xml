<!--
Configuration file to be located at C:\Avid\AvidConfig.xml
-->
<Config>
	<!-- Paths (with optional arguments) for the player applications -->
	<Programs>
		<Program name="TV" path = "c:\Program Files (x86)\DVBViewer\dvbviewer.exe"  args="-c -f" /> <!-- TV viewer-->
		<Program name="Video" path = "C:\Program Files (x86)\Zoom Player\zplayer.exe" />										<!-- Zoom Player -->	
		<Program name="Photo" path = "C:\Windows\System32\MC19.exe" />															<!-- J River Media Center -->
		<Program name="GForce" path = "C:\Program Files (x86)\SoundSpectrum\G-Force\G-Force Standalone.exe" mode="Normal" />	<!-- G-Force stand-alone -->
    <Program name="LogFire" path = "C:\Program Files (x86)\Zoom Player\zplayer.exe" args = "'D:\LogFire.mp4' /Vol:0 /F" /> <!-- Zoom Player for Log Fire video -->
    <Program name="Curzon" path = "C:\Program Files\Internet Explorer\iexplore.exe" args = "-k -noframemerging https://www.curzonhomecinema.com/" />
    <!-- IE Browser for Curzon Home Cinema -->
    <Program name="Prime" path = "C:\Program Files\Internet Explorer\iexplore.exe" args = "-k -noframemerging http://http://www.amazon.co.uk/Prime-Instant-Video/b/?node=...../" />
    <!-- IE Browser for Amazon Prime Instant Video -->
  </Programs>
	
	<!-- Paths for stored media files -->
	<Recordings>D:\Recorded TV</Recordings>
	<DVD>D:\DVD</DVD>
	<Video>D:\Video</Video>

  <!-- The mapping of DvbViewer Action names to their internal coded integer values -->
  <DvbViewerActions>C:\Program Files (x86)\DVBViewer\actions.ini</DvbViewerActions>

  <!-- The local Spotify market for which albums and tracks are permitted to stream -->
  <SpotifyMarket>GB</SpotifyMarket>

  <!-- Fixed IP addresses - reserved by DHCP or outside DHCP range -->
	<IpAddress>192.168.1.64</IpAddress>
	<ReceiverAddress>192.168.1.11</ReceiverAddress>
	
	<!-- TV Favourites for watching live on Widows Media Center -->
	<TV>
		<Favourite>BBC One HD</Favourite>
		<Favourite>BBC Two HD</Favourite>
		<Favourite>ITV HD</Favourite>
		<Favourite>Channel 4 HD</Favourite>
		<Favourite>BBC FOUR</Favourite>
	</TV>
	
	<!-- Sky TV Favourites, Radio stations and subscribed packages -->
	<Sky>
    <CapacityGB>300</CapacityGB>
    <Favourite>BBC One HD</Favourite>
