    <br />
    <br />
    <table class="width100">
        <tr>
            <td class="centeredButton width25"><img class="tvKey" id="REWIND" alt="" src="/Content/Buttons/Transport.Rewind.png"></td>
            <td class="centeredButton width50"><img class="tvPlayPause" id="tvPlayPause" src="/Content/Buttons/PlayPauseButton.png"></td>
            <td class="centeredButton width25"><img class="tvKey" id="FF" alt="" src="/Content/Buttons/Transport.FastForward.png"></td>
        </tr>
    </table>
}