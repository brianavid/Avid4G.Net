@Html.Partial("TopBar")
@section scripts {
@Html.Raw(Render.Script("topBar", Request))
@Html.Raw(Render.Script("home", Request))
@Html.Raw(Render.Script("streaming", Request))
}

<div class="@(ViewBag.HideRokuClass ?? "")">
    @Html.Partial("PaneButtons")
</div>
<div id="rokuControlsPane">
    <div id="rokuSearchPane" class="rokuSearchPane @(ViewBag.HideRokuClass ?? "")">
        <div class="rokuSearch">
            @Html.Partial("RokuSearchPane")
        </div>
    </div>
    <div id="rokuControlsPane" class="rokuControlsPane @(ViewBag.HideRokuClass ?? "")">
        <div class="rokuControls">
            @Html.Partial("RokuControlsPane")
        </div>
    </div>
    <div id="smartControlsPane" class="smartControlsPane @(ViewBag.HideSmartClass ?? "")">
        <div class="smartControls">
            @Html.Partial("SmartControlsPane")
        </div>
    </div>
    <div id="webSearchPane" class="webSearchPane @(ViewBag.HideWebClass ?? "")">
        <div class="webSearch">
            @Html.Partial("WebSearchPane")
        </div>
    </div>
    <div id="webControlsPane" class="webControlsPane @(ViewBag.HideWebClass ?? "")">
        <div class="webControls">
            @Html.Partial("WebControlsPane")
        </div>
    </div>
</div>
